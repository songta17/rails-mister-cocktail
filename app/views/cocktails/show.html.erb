<h1><%= @cocktail.name %></h1>
<p>Recipe details</p>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.ingredient.name %>
      <%= link_to "Remove",
          dose_path(dose),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
<%= link_to "Go back to the cocktail list", cocktails_path(@cocktails) %>
<br />
<%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail) %>




